{% extends "base.twig" %}

{% block content %}
	<!--Header-->
	{% if page.thumbnail %}
		<div class="container pagehead-con">
			<div class="row">
			 <img src="{{page.thumbnail.src('large')}}" alt="{{page.title}}">
			</div>
		</div>
	{% endif %}

	<!--pagehead title and description-->
  <div class="container pagetitle-con">
    <div class="row">
      <div class="col-lg-12">
        <span class="page-title">
          <h1>{{ page.title }}</h1>
          <p>{{page.get_field('subtitle')}}</p>
        </span>
      </div>
    </div>
  </div>

	<!--Text-->
	<div class="container white">
  	<div class="row about-textbox">
			{% for col in page.get_field('content_columns') %}
				{% if loop.length == 1 or loop.length == 2 %}
					<div class="col-md-6 col-xs-12 about-text">
				{% else %}
					<div class="col-md-4 col-xs-12 about-text">
				{% endif %}
					{{col.column}}
				</div><!-- end column -->
			{% endfor %}
		</div>
	</div>

	<!--team-->
  <div class="container white">
    <div class="row">
      <div class="col-lg-12">
        <!-- Nav tabs -->
				<ul class="nav nav-tabs" role="tablist">
					{% for cat in team_categories %}
						<li><a href="#{{cat.slug}}" aria-controls="{{cat.slug}}" role="tab" data-toggle="tab">{{cat.name}}</a></li>
					{% endfor %}
				</ul>
			</div>

			<div class="col-lg-12 team">
        <!-- Tab panes -->
        <div class="tab-content">
          <div role="tabpanel" class="tab-pane active" id="kernteam">
						{% for member in team_members|slice(0,1) %}
							<div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
	              <div class="person {{member.terms|join(' ')|lower}} {{member.slug}}">
	                <div class="person-img">
	                  <a href="over-persoon.html"><img src="{{member.thumbnail.src('medium')}}" alt="{{member.title}}"/></a>
	                </div>
	                <div class="person-info">
	                  <h3><a href="{{member.permalink}}">{{member.title}}</a></h3>
	                  <p>{{member.get_field('	member_job')}}</p>
	                </div>
	              </div>
	            </div>
						{% endfor %}
					</div><!--end tab-->
					<div role="tabpanel" class="tab-pane" id="partnerships">
						{% for member in team_members %}
							<div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
	              <div class="person {{member.terms|join(' ')|lower}} {{member.slug}}">
	                <div class="person-img">
	                  <a href="over-persoon.html"><img src="{{member.thumbnail.src('medium')}}" alt="{{member.title}}"/></a>
	                </div>
	                <div class="person-info">
	                  <h3><a href="{{member.permalink}}">{{member.title}}</a></h3>
	                  <p>{{member.get_field('	member_job')}}</p>
	                </div>
	              </div>
	            </div>
						{% endfor %}
					</div>
				</div>
			</div><!--end .team-->
		</div><!--end row-->
	</div>

	<!--Quote-->
	{% if quote %}
  <div class="container quote-con">
    <div class="row quote darkgrey">
      <div class="col-lg-12">
        <span class="quote-font text-white">{{ quote.get_field('quote_text') }}</span>
      </div>
    </div>
  </div>
	{% endif %}


{% endblock %}
