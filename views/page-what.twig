{% extends "base.twig" %}

{% block content %}
	<!--Header-->
	<div class="container pagehead-con">
		<div class="row">
			{% if page.thumbnail %}
		 	<img src="{{page.thumbnail.src('large')}}" alt="{{page.title}}">
			{% else %}
			<img src="{{ theme.link }}/img/pageheads/pagehead_{{ random(5) }}.jpg" alt="{{page.title}}" />
			{% endif %}
		</div>
	</div>

	<!--pagehead title and description-->
	<div class="container pagetitle-con">
		<div class="row">
			<div class="col-lg-12">
				<span class="page-title">
					<h1>{{ page.title }}</h1>
					<p>{{page.get_field('subtitle')}}</p>
				</span>
			</div>
		</div>
	</div>

	<!--Text-->
	<div class="container white">
  	<div class="row about-textbox">
			{% for col in page.get_field('content_columns') %}
				{% if loop.length == 1 or loop.length == 2 %}
					<div class="col-md-6 col-xs-12 about-text">
				{% else %}
					<div class="col-md-4 col-xs-12 about-text">
				{% endif %}
					{{col.column}}
				</div><!-- end column -->
			{% endfor %}
		</div>
	</div>

	<!--programmas-->
	<div class="container programma-con">
    <div class="row programma-box">
		{% if programma_items %}
			{% for programma in programma_items %}
				<div class="col-md-4 col-sm-6 col-xs-12">
					<div class="programma-infobox">
						<a href="{{programma.permalink}}">
							<div class="programma-infobox-img">
								<img src="{{programma.thumbnail.src('medium')}}" alt="{{programma.thumbnail.title}}">
							</div>
						</a>
						<div class="programma-content">
							<h2><a href="{{programma.permalink}}">{{programma.title}}</a></h2>
							<span class="description">{{programma.get_field('subtitle')}}</span>
							<p>{{programma.get_preview(35,false,'',true)}}</p>
						</div>
						<a href="{{programma.permalink}}"><div class="title-block white">Lees meer</div></a>
					</div>
				</div>
			{% endfor %}
		{% endif %}
		</div>
	</div>

	<!--Quote-->
	{% if quote %}
  <div class="container quote-con">
    <div class="row quote darkgrey">
      <div class="col-lg-12">
        <span class="quote-font text-white">{{ quote.get_field('quote_text') }}</span>
      </div>
    </div>
  </div>
	{% endif %}


{% endblock %}
